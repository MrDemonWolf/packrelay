{
	"name": "mrdemonwolf/packrelay",
	"description": "Accept WPForms submissions from external apps and mobile clients via REST API with Google reCAPTCHA v3 protection.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "MrDemonWolf, Inc.",
			"homepage": "https://mrdemonwolf.com"
		}
	],
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0",
		"brain/monkey": "^2.6",
		"mockery/mockery": "^1.6"
	},
	"autoload-dev": {
		"psr-4": {
			"PackRelay\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-text"
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {}
	}
}
